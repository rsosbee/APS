RETURN retSUCCESS
!

UPDATE_APS_FILES:			! Used to insure that all APS files are updated.
ENTER (cCompanyCode$),err=*next
	if nul(cCompanyCode$) { 
		cCompanyCode$ = coSession'CompanyCode$ 
	}
	retVal = _obj'UpdateC2PFiles(cCompanyCode$)

RETURN retVal
!
