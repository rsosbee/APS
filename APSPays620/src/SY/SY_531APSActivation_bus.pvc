	IF tmpRet { tmpRet	= URLMaintObj'SetValue("URLDesc$","APS EMV Devices URL") }
	IF tmpRet { tmpRet	= URLMaintObj'SetValue("URL$","https://secure.apspaymentgateway.com/api/v2/devices") }	
	IF tmpRet { tmpRet	= URLMaintObj'WRITE() }
	IF NOT(tmpRet) { coSession'UI'MessageBox$(URLMaintObj'LastErrorNum$,URLMaintObj'LastErrorMsg$) }

	
	DROP OBJECT URLMaintObj,ERR=*NEXT
